    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;
    -unity-font-definition: url('project://database/Assets/Fonts/Almendra-Regular%20SDF.asset?fileID=11400000&guid=d1b74c95a7bb9ee4493073c826d3c13a&type=2#Almendra-Regular SDF');
}

