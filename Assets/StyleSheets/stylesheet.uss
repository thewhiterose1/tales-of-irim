    border-left-color: rgb(45, 32, 26);
    border-right-color: rgb(45, 32, 26);
    border-top-color: rgb(45, 32, 26);
    border-bottom-color: rgb(45, 32, 26);
    border-top-width: 5px;
    border-right-width: 5px;
    border-bottom-width: 5px;
    border-left-width: 5px;
    font-size: 30px;
    -unity-font: url('project://database/Assets/UI%20Toolkit/UnityThemes/UnityDefaultRuntimeTheme.tss?fileID=2230732570650464555&guid=e6e2409635d18e6489e5570f01503fc9&type=3#NotInter-Regular');
